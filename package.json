{
  "private": true,
  "name": "viewports-server",
  "version": "1.0.0",
  "description": "TBD",
  "author": "Denis Rojcyk <denis@rojcyk.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rojcyk/viewports-server.git"
  },
  "scripts": {
    "start": "NODE_ENV=production node ./dist/worker-server.js",
    "build": "babel src --out-dir dist --extensions '.ts'",
    "clean": "rm -r dist ",
    "migrate": "NODE_ENV=production ./node_modules/typeorm/cli.js migration:run",
    "seed": "NODE_ENV=production node ./node_modules/typeorm-seeding/dist/cli.js seed",
    "update": "NODE_ENV=production node ./dist/tasks/downloadData.js",
    "initDatabase": "yarn run migrate && yarn run seed && yarn run update",
    "dev": "nodemon",
    "dev:typeorm": "node -r dotenv/config -r ts-node/register -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "dev:typeorm-seeding": "node -r ts-node/register -r tsconfig-paths/register ./node_modules/typeorm-seeding/dist/cli.js",
    "dev:migration:run": "yarn run dev:typeorm migration:run",
    "dev:migration:generate": "yarn run dev:typeorm migration:generate -n",
    "dev:seed:run": "yarn run dev:typeorm-seeding seed",
    "dev:db:drop": "yarn run dev:typeorm schema:drop",
    "dev:task:update": "babel-node --require dotenv/config ./src/tasks/downloadData.ts --extensions \".ts\"",
    "dev:reset": "yarn run dev:db:drop && yarn run dev:migration:run && yarn run dev:seed:run"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.4",
    "@babel/core": "^7.10.4",
    "@babel/node": "^7.10.4",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/faker": "^5.1.2",
    "@types/helmet": "^0.0.48",
    "@types/node": "^14.0.14",
    "@types/node-fetch": "^2.5.7",
    "babel-node": "^0.0.1-security",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.0",
    "dotenv": "^8.2.0",
    "nodemon": "^2.0.4",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@slack/web-api": "^5.12.0",
    "axios": "^0.20.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dayjs": "^1.8.29",
    "express": "^4.17.1",
    "helmet": "^4.1.1",
    "neat-csv": "^5.2.0",
    "node-fetch": "^2.6.1",
    "pg": "^8.2.1",
    "typeorm": "^0.2.25",
    "typeorm-seeding": "^1.6.1"
  }
}
