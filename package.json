{
  "private": true,
  "name": "viewports-server",
  "version": "0.0.1",
  "description": "TBD",
  "author": "Denis Rojcyk <denis@rojcyk.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rojcyk/viewports-server.git"
  },
  "scripts": {
    "start": "NODE_ENV=production node ./dist/worker-server.js",
    "build": "babel src --out-dir dist --extensions '.ts'",
    "migration:run": "NODE_ENV=production typeorm migration:run",
    "seed:run": "NODE_ENV=production typeorm-seeding seed",
    "task:populateData": "NODE_ENV=production node ./dist/tasks/populateData.js",
    "db:populate": "yarn run migration:run && yarn run seed:run && yarn run task:populateData",
    "dev": "nodemon",
    "dev:typeorm": "node -r dotenv/config -r ts-node/register -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "dev:typeorm-seeding": "node -r ts-node/register -r tsconfig-paths/register ./node_modules/typeorm-seeding/dist/cli.js",
    "dev:migration:run": "yarn run dev:typeorm migration:run",
    "dev:migration:generate": "yarn run dev:typeorm migration:generate -n",
    "dev:seed:run": "yarn run dev:typeorm-seeding seed",
    "dev:db:drop": "yarn run dev:typeorm schema:drop",
    "dev:task:populateData": "NODE_ENV=development babel-node --require dotenv/config ./src/tasks/populateData.ts --extensions \".ts\"",
    "dev:reset": "rm ./src/migrations/* && yarn run db:drop && yarn run migration:generate SchemaInit && yarn run migration:run && yarn run seed:run"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.4",
    "@babel/core": "^7.10.4",
    "@babel/node": "^7.10.4",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/faker": "^4.1.12",
    "@types/helmet": "^0.0.47",
    "@types/node": "^14.0.14",
    "babel-node": "^0.0.1-security",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.0",
    "dotenv": "^8.2.0",
    "nodemon": "^2.0.4",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.6"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dayjs": "^1.8.29",
    "express": "^4.17.1",
    "helmet": "^3.23.3",
    "neat-csv": "^5.2.0",
    "pg": "^8.2.1",
    "typeorm": "^0.2.25",
    "typeorm-seeding": "^1.6.1"
  }
}
